@model IEnumerable<Booking.Flight>

<h2>Manage Flights</h2>
<table class="table">
    <thead>
        <tr>
            <th>Flight Number</th>
            <th>Origin</th>
            <th>Destination</th>
            <th>Departure Time</th>
            <th>Arrival Time</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var flight in Model)
        {
            <tr>
                <td>@flight.FlightNumber</td>
                <td>@flight.Origin</td>
                <td>@flight.Destination</td>
                <td>@flight.DepartureTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@flight.ArrivalTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@flight.Price.ToString("C")</td>
                <td>
                    <!-- Update the controller to "Admin" for EditTicket -->
                    <a href="@Url.Action("EditFlight", "Admin", new { id = flight.FlightId })" class="btn btn-primary">Edit</a>

                    <!-- Update the controller to "Admin" for Delete -->
                    <a href="@Url.Action("DeleteFlight", "Admin", new { id = flight.FlightId })" class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this flight?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
