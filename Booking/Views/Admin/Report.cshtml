@model Booking.Models.AdminReportViewModel

@{
    ViewBag.Title = "Admin Report";
}

<h2>Admin Report</h2>

<div class="card">
    <div class="card-header">
        <h3>Overview</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Metric</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Total Tickets Sold</td>
                    <td>@Model.TotalTicketsSold</td>
                </tr>
                <tr>
                    <td>Total Ticket Cost</td>
                    <td>@Model.TotalTicketCost.ToString("C")</td>
                </tr>
                <tr>
                    <td>Average Ticket Cost</td>
                    <td>@Model.AverageTicketCost.ToString("C")</td>
                </tr>
                <tr>
                    <td>Highest Ticket Cost</td>
                    <td>@Model.HighestTicketCost.ToString("C")</td>
                </tr>
                <tr>
                    <td>Lowest Ticket Cost</td>
                    <td>@Model.LowestTicketCost.ToString("C")</td>
                </tr>
                <tr>
                    <td>Total Number of Passengers</td>
                    <td>@Model.TotalPassengers</td>
                </tr>
                <tr>
                    <td>Average Passengers per Ticket</td>
                    <td>@Model.AveragePassengers</td>
                </tr>
                <tr>
                    <td>Longest Flight Duration (hours)</td>
                    <td>@Model.LongestDuration</td>
                </tr>
                <tr>
                    <td>Shortest Flight Duration (hours)</td>
                    <td>@Model.ShortestDuration</td>
                </tr>
                <tr>
                    <td>Total Flights</td>
                    <td>@Model.TotalFlights</td>
                </tr>
                <tr>
                    <td>Total Users</td>
                    <td>@Model.TotalUsers</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
