@model Booking.Ticket

@{
    ViewBag.Title = "Edit Ticket";
}

<h2>Edit Ticket</h2>

@using (Html.BeginForm("EditTicket", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(m => m.TicketId)

    <div class="form-group">
        @Html.LabelFor(m => m.UserId, "User ID")
        @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FlightId, "Flight ID")
        @Html.TextBoxFor(m => m.FlightId, new { @class = "form-control", @readonly = "readonly" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TotalPassengers, "Total Passengers")
        @Html.TextBoxFor(m => m.TotalPassengers, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.TotalCost, "Total Cost")
        @Html.TextBoxFor(m => m.TotalCost, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Status, "Status")
        @Html.TextBoxFor(m => m.Status, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("ManageTickets", "Admin")" class="btn btn-secondary">Cancel</a>
}
