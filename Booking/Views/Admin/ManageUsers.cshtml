@model IEnumerable<Booking.User>

<h2>Manage Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td>@(user.IsActive.HasValue ? (user.IsActive.Value ? "Active" : "Inactive") : "Unknown")</td>
                <td>
                    <a href="@Url.Action("EditUser", "Admin", new { id = user.UserId })" class="btn btn-primary">Edit</a>
                    @*<a href="@Url.Action("DeleteUser", "Admin", new { id = user.UserId })" class="btn btn-danger"
                       onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>
