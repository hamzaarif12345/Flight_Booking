@model IEnumerable<Booking.Ticket>

<h2>Manage Tickets</h2>

<table class="table">
    <thead>
        <tr>
            <th>Ticket ID</th>
            <th>Passengers</th>
            <th>Total Cost</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.TicketId</td>
                <td>@ticket.TotalPassengers</td>
                <td>@ticket.TotalCost</td>
                <td>@ticket.Status</td>
                <td>
                    @Html.ActionLink("Edit", "EditTicket", new { id = ticket.TicketId }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }
    </tbody>
</table>
